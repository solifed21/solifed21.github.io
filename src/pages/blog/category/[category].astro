---
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';
import BaseHead from '../../../components/BaseHead.astro';
import Footer from '../../../components/Footer.astro';
import FormattedDate from '../../../components/FormattedDate.astro';
import Header from '../../../components/Header.astro';
import { SITE_TITLE } from '../../../consts';

export async function getStaticPaths() {
	const posts = await getCollection('blog');
	const categories = [...new Set(posts.map((post) => post.data.category).filter(Boolean))];
	return categories.map((category) => ({ params: { category } }));
}

const { category } = Astro.params;
const posts = (await getCollection('blog'))
	.filter((post) => post.data.category === category)
	.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<!doctype html>
<html lang="ko">
	<head>
		<BaseHead title={`${category} - ${SITE_TITLE}`} description={`${category} 카테고리의 글 목록`} />
	</head>
	<body>
		<Header />
		<main>
			<h1>{category}</h1>
			<p class="count">{posts.length}개의 글</p>
			<ul class="post-grid">
				{posts.map((post) => (
					<li class="post-card">
						<a href={`/blog/${post.id}/`}>
							{post.data.heroImage && (
								<Image width={720} height={360} src={post.data.heroImage} alt="" />
							)}
							<div class="content">
								<h2>{post.data.title}</h2>
								<p class="date"><FormattedDate date={post.data.pubDate} /></p>
							</div>
						</a>
					</li>
				))}
			</ul>
		</main>
		<Footer />
	</body>
</html>

<style>
	h1 { margin-bottom: 0.25em; }
	.count { color: var(--text-secondary); margin-bottom: 1.5em; }
	.post-grid {
		display: grid;
		grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
		gap: 1.5em;
		list-style: none;
		padding: 0;
		margin: 0;
	}
	.post-card {
		background: var(--bg-card);
		border-radius: 12px;
		overflow: hidden;
		border: 1px solid var(--border-color);
		transition: transform 0.2s, box-shadow 0.2s;
	}
	.post-card:hover {
		transform: translateY(-4px);
		box-shadow: var(--box-shadow);
	}
	.post-card a { display: block; color: inherit; }
	.post-card img { width: 100%; aspect-ratio: 2/1; object-fit: cover; }
	.post-card .content { padding: 1em; }
	.post-card h2 { font-size: 1.1em; margin-bottom: 0.5em; }
	.post-card .date { color: var(--text-secondary); font-size: 0.85em; margin: 0; }
</style>
