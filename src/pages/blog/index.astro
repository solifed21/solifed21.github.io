---
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import Header from '../../components/Header.astro';
import Sidebar from '../../components/Sidebar.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../../consts';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="ko">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<div class="layout">
			<Sidebar />
			<main>
				<h1>Blog</h1>
				<ul class="post-grid">
					{posts.map((post) => (
						<li class="post-card">
							<a href={`/blog/${post.id}/`}>
								{post.data.heroImage && (
									<Image width={720} height={360} src={post.data.heroImage} alt="" />
								)}
								<div class="content">
									<h2>{post.data.title}</h2>
									<div class="meta">
										<span class="date"><FormattedDate date={post.data.pubDate} /></span>
										{post.data.category && (
											<a href={`/blog/category/${post.data.category}/`} class="category-tag" onclick="event.stopPropagation()">
												{post.data.category}
											</a>
										)}
									</div>
								</div>
							</a>
						</li>
					))}
				</ul>
			</main>
		</div>
		<Footer />
	</body>
</html>

<style>
	.layout {
		display: flex;
		gap: 2em;
		max-width: 1100px;
		margin: 0 auto;
		padding: 2em 1em;
	}
	main { flex: 1; }
	h1 { margin-bottom: 1em; }
	.post-grid {
		display: grid;
		grid-template-columns: repeat(2, 1fr);
		gap: 1.5em;
		list-style: none;
		padding: 0;
		margin: 0;
	}
	.post-card {
		background: var(--bg-card);
		border-radius: 12px;
		overflow: hidden;
		border: 1px solid var(--border-color);
		transition: transform 0.2s, box-shadow 0.2s;
	}
	.post-card:hover {
		transform: translateY(-4px);
		box-shadow: var(--box-shadow);
	}
	.post-card a { display: block; color: inherit; }
	.post-card img { width: 100%; aspect-ratio: 2/1; object-fit: cover; border-radius: 0; }
	.post-card .content { padding: 1em; }
	.post-card h2 { font-size: 1.1em; margin-bottom: 0.5em; }
	.post-card .meta { display: flex; align-items: center; gap: 0.75em; font-size: 0.85em; }
	.post-card .date { color: var(--text-secondary); }
	.post-card .category-tag {
		background: var(--accent);
		color: var(--bg-primary);
		padding: 0.15em 0.5em;
		border-radius: 4px;
		font-size: 0.9em;
	}
	.post-card .category-tag:hover { opacity: 0.8; }
	@media (max-width: 720px) {
		.layout { flex-direction: column; }
		.post-grid { grid-template-columns: 1fr; }
	}
</style>
