---
import { Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';
import Sidebar from '../components/Sidebar.astro';

type Props = CollectionEntry<'blog'>['data'];

const { title, description, pubDate, updatedDate, heroImage, tags } = Astro.props;
---

<html lang="ko">
	<head>
		<BaseHead title={title} description={description} />
	</head>
	<body>
		<Header />
		<div class="layout">
			<Sidebar />
			<main>
				<article>
					{heroImage && (
						<div class="hero-image">
							<Image width={1020} height={510} src={heroImage} alt="" />
						</div>
					)}
					<div class="prose">
						<header class="article-header">
							<div class="meta">
								<FormattedDate date={pubDate} />
								{updatedDate && <span class="updated"> · 수정됨 <FormattedDate date={updatedDate} /></span>}
							</div>
							<h1>{title}</h1>
							{tags && tags.length > 0 && (
								<div class="tags">
									{tags.map(tag => <a href={`/blog/tag/${tag}/`} class="tag">#{tag}</a>)}
								</div>
							)}
						</header>
						<div class="content">
							<slot />
						</div>
					</div>
				</article>
			</main>
		</div>
		<Footer />
	</body>
</html>

<style>
	main { min-width: 0; }
	.hero-image { margin-bottom: var(--space-4); }
	.hero-image img {
		width: 100%;
		border-radius: var(--radius);
		box-shadow: var(--box-shadow);
	}
	.prose { max-width: var(--prose-max); }
	.article-header {
		margin-bottom: var(--space-4);
		padding-bottom: var(--space-3);
		border-bottom: 1px solid var(--border-color);
	}
	.article-header h1 { margin: var(--space-2) 0; }
	.meta { color: var(--text-secondary); font-size: 0.9rem; }
	.updated { font-style: italic; }
	.tags {
		display: flex;
		flex-wrap: wrap;
		gap: var(--space-1);
		margin-top: var(--space-2);
	}
	.tag {
		background: var(--bg-secondary);
		padding: 6px 12px;
		border-radius: var(--radius-sm);
		font-size: 0.85rem;
		color: var(--text-secondary);
		border: 1px solid var(--border-color);
		transition: all var(--transition);
	}
	.tag:hover {
		background: var(--accent);
		color: var(--bg-primary);
		border-color: var(--accent);
	}
	.content { line-height: 1.8; }
	.content :global(h2) { margin-top: var(--space-5); }
	.content :global(h3) { margin-top: var(--space-4); }
</style>
