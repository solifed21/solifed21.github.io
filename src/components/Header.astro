---
import HeaderLink from './HeaderLink.astro';
import Search from './Search.astro';
---

<header>
	<nav>
		<a href="/" class="logo" aria-label="홈으로">S</a>
		<div class="nav-links">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/blog">Blog</HeaderLink>
			<HeaderLink href="/blog/category">Categories</HeaderLink>
			<HeaderLink href="/about">About</HeaderLink>
		</div>
		<div class="nav-right">
			<Search />
			<a href="https://github.com/solifed21" target="_blank" rel="noopener" class="github-link" aria-label="GitHub">
				<svg viewBox="0 0 16 16" width="24" height="24"><path fill="currentColor" d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"/></svg>
			</a>
		</div>
	</nav>
</header>

<style>
	header {
		background: rgba(36, 36, 36, 0.85);
		backdrop-filter: blur(8px);
		border-bottom: 1px solid var(--border-color);
		position: sticky;
		top: 0;
		z-index: 100;
	}
	nav {
		max-width: var(--container-max);
		margin: 0 auto;
		padding: var(--space-2) var(--space-3);
		display: flex;
		align-items: center;
		justify-content: space-between;
		gap: var(--space-3);
	}
	.logo {
		font-size: 1.5rem;
		font-weight: 700;
		color: var(--accent);
		width: 44px;
		height: 44px;
		display: flex;
		align-items: center;
		justify-content: center;
		border: 2px solid var(--accent);
		border-radius: var(--radius-sm);
		transition: all var(--transition);
	}
	.logo:hover { background: var(--accent); color: var(--bg-primary); }
	.nav-links { display: flex; gap: var(--space-4); }
	.nav-links :global(a) {
		color: var(--text-secondary);
		padding: var(--space-1) 0;
		border-bottom: 2px solid transparent;
		transition: all var(--transition);
	}
	.nav-links :global(a:hover),
	.nav-links :global(a.active) {
		color: var(--accent);
		border-bottom-color: var(--accent);
	}
	.nav-right { display: flex; align-items: center; gap: var(--space-2); }
	.github-link {
		color: var(--text-secondary);
		padding: var(--space-1);
		transition: color var(--transition);
	}
	.github-link:hover { color: var(--accent); }
	@media (max-width: 720px) {
		.nav-links { display: none; }
		nav { padding: var(--space-2); }
	}
</style>
